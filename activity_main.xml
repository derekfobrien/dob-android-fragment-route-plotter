<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
	android:keepScreenOn="true"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragmentSpeedo"
        android:name="com.example.fragmentsrouteplotter.SpeedoFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout="@layout/speedofragment" />

    <fragment
        android:id="@+id/fragmentList"
        android:name="com.example.fragmentsrouteplotter.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout="@layout/listsfragment" />

</LinearLayout>