<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1018"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/def_time_date"
        android:textColor="#79B9EC"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textTime"
        android:paddingLeft="12dp"
        android:text="@string/def_lat_long"
        android:textColor="#849E3C"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textLocation"
        android:paddingLeft="12dp"
        android:text="@string/def_speed"
        android:textColor="#FFEB3B" />

    <TextView
        android:id="@+id/textIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textSpeed"
        android:paddingLeft="12dp"
        android:text="@string/def_intspeed"
        android:textColor="#4F7461" />

</RelativeLayout>
